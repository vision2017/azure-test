{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webPublicIPDnsNamePrefix": {
      "type": "string",
      "defaultValue": "webrdpip",
      "minLength": 1
    },
    "vmWebLoadBalancerName": {
      "type": "string",
      "defaultValue": "LB1",
      "minlength": 1
    },
    "publicIPLBDnsName": {
      "type": "string",
      "defaultValue": "lb1",
      "minLength": 1
    },
    "vNetPrivateName": {
      "type": "string",
      "metadata": {
        "description": "Virtual network name"
      }
    }
  },
  "variables": {
    "lbID": "[resourceId('Microsoft.Network/loadBalancers',parameters('vmWebLoadBalancerName'))]",
    "frontEndIPConfigID": "[concat(variables('lbID'),'/frontendIPConfigurations/LoadBalancerFrontEnd')]",
    "lbPoolID": "[concat(variables('lbID'),'/backendAddressPools/BackendPool1')]",
    "lbProbeID": "[concat(variables('lbID'),'/probes/tcpProbe')]",
    "publicIPLBName": "publicIPLB"
  },

  "resources": [
    {
      "name": "[parameters('vmWebLoadBalancerName')]",
      "type": "Microsoft.Network/loadBalancers",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        //"[parameters('vNetPrivateName')]",
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPLBName'))]"
      ],
      "tags": {
        "displayName": "[parameters('vmWebLoadBalancerName')]"
      },
      "properties": {
        "frontendIPConfigurations": [
          {
            "properties": {
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPLBName'))]"
              }
            },
            "name": "LoadBalancerFrontend"
          }
        ],
        "backendAddressPools": [
          {
            "name": "BackendPool1"
          }
        ],
        "loadBalancingRules": [
          {
            "properties": {
              "frontendIPConfiguration": {
                "id": "[variables('frontEndIPConfigID')]"
              },
              "backendAddressPool": {
                "id": "[variables('lbPoolID')]"
              },
              "probe": {
                "id": "[variables('lbProbeID')]"
              },
              "protocol": "Tcp",
              "frontendPort": 80,
              "backendPort": 80,
              "idleTimeoutInMinutes": 5
            },
            "name": "lbRule"
          }
        ],
        "probes": [
          {
            "name": "tcpProbe",
            "properties": {
              "protocol": "Tcp",
              "port": 80,
              "intervalInSeconds": 5,
              "numberofProbes": 2
            }
          }
        ]
      }
    },
    {
      "name": "[variables('publicIPLBName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [],
      "tags": {
        "displayName": "[variables('publicIPLBName')]"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[concat(parameters('publicIPLBDnsName'),uniqueString(resourceGroup().id))]"
        }
      }
    }
  ],
  "outputs": {
    "lbID": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/loadBalancers',parameters('vmWebLoadBalancerName'))]"
    },
    "vmWebLoadBalancerName": {
      "type": "string",
      "value": "[parameters('vmWebLoadBalancerName')]"
    }
  }
}